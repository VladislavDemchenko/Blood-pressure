<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="-215dp" tools:layout_editor_absoluteX="-37dp"
        android:id="@+id/activity_main">
    <FrameLayout
            android:layout_width="84dp"
            android:layout_height="211dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="250dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Systolic"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"/>

        <NumberPicker
                android:id="@+id/firstNumberPicker"
                android:layout_width="84dp"
                android:layout_height="211dp" tools:ignore="MissingConstraints"
        />
    </FrameLayout>
    <FrameLayout
            android:layout_width="84dp"
            android:layout_height="211dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diastolic"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"/>
        <NumberPicker
                android:id="@+id/secondNumberPicker"
                android:layout_width="84dp"
                android:layout_height="211dp" tools:ignore="MissingConstraints"
        />
    </FrameLayout>
    <FrameLayout
            android:layout_width="84dp"
            android:layout_height="211dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="250dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulse"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"/>
        <NumberPicker
                android:id="@+id/thirdNumberPicker"
                android:layout_width="84dp"
                android:layout_height="211dp" tools:ignore="MissingConstraints"
        />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>